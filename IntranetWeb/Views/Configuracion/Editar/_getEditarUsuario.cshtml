@using IntranetWeb.Core.Utils;
@model IntranetWeb.ViewModel.Configuracion.Perfil
@{Layout = null;
    ViewBag.Title = "Datos personales";
    ViewBag.Description = "Administración de los datos personales del usuario";
}
@functions {
    object getHtmlAttributesDate(bool ReadOnly)
    {
        if (ReadOnly)
        {
            return new { @readonly = "readonly", @class = "form-control date-picker" };
        }
        return new { @class = "form-control date-picker" };
    }
}

<div class="widget-box transparent">
    <div class="widget-header">

        <h4 class="widget-title lighter"><i class="glyphicon glyphicon-user"></i> @ViewBag.Title</h4>

        <div class="widget-toolbar no-border">
         
        </div>
    </div>
    <div class="widget-body">
        <div class=" widget-main">
            <div class="row">
                <div class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    @Html.LabelBoldFor(m => m.Usuario.TipoDocumentoIdentidad)
                    @Html.TextBoxFor(m => m.Usuario.TipoDocumentoIdentidad, new { @Readonly = "true", Class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Usuario.TipoDocumentoIdentidad, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    @Html.LabelBoldFor(m => m.Usuario.NumeroDocumentoIdentidad)
                    @Html.TextBoxFor(m => m.Usuario.NumeroDocumentoIdentidad, new { @Readonly = "true", Class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Usuario.NumeroDocumentoIdentidad, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    @Html.LabelBoldFor(m => m.Usuario.Nombre)
                    @Html.TextBoxFor(m => m.Usuario.Nombre, new { @Readonly = "true", Class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Usuario.Nombre, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    @Html.LabelBoldFor(m => m.Usuario.FechaNacimiento)
                    @Html.TextBoxFor(m => m.Usuario.FechaNacimiento, IntranetWeb.Core.Constante.AppFormat.date, @getHtmlAttributesDate(Model.Usuario.FechaNacimiento != null))
                    @Html.ValidationMessageFor(m => m.Usuario.FechaNacimiento, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    @Html.LabelBoldFor(m => m.Usuario.TelefonoFijo)
                    @Html.TextBoxFor(m => m.Usuario.TelefonoFijo, new {  Class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Usuario.TelefonoFijo, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    @Html.LabelBoldFor(m => m.Usuario.TelefonoMovil)
                    @Html.TextBoxFor(m => m.Usuario.TelefonoMovil, new {  Class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Usuario.TelefonoMovil, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    @Html.LabelBoldFor(m => m.Usuario.Email)
                    @Html.TextBoxFor(m => m.Usuario.Email, new { Class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Usuario.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    @Html.LabelBoldFor(m => m.Usuario.ContrasenaActual)
                    @Html.PasswordFor(m => m.Usuario.ContrasenaActual, new { Class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Usuario.ContrasenaActual, "", new { @class = "text-danger" })
                </div>
                                
                @Html.HiddenFor(m => m.Usuario.Id)
            </div>
        </div>
    </div>
</div>


