@using IntranetWeb.Core.Utils;
@model IntranetWeb.ViewModel.Administrador.ParametroConfiguracion

@{
    ViewBag.Title = "Parámetros del sistema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header"><h1>@ViewBag.Title</h1></div>
<div class="row">
    <div class="col-xs-12">
        <div class="table-header">
            @ViewBag.Title &nbsp;
            <div class="widget-toolbar">
                <a href="javascript:void(0);" data-rel="tooltip" data-placement="top" title="@Resources.EtiquetaResource.CrearRegistro" class="tooltip-info icono-crear-registro" data-action="create"> <i id="iCreateTablaPrincipal" class="ace-icon fa fa-plus white"> </i></a>
            </div>
        </div>
        <!-- div.table-responsive -->
        <!-- div.dataTables_borderWrap -->
        <div id="dynamic-table_wrapper" class="dataTables_wrapper form-inline no-footer">
            <table id="tableParametroConfiguracion" class="table table-striped table-bordered table-hover dataTable no-footer DTTT_selectable"
                   data-url="@Url.Action("consultarParametroConfiguracion")"
                   data-url-crear="@Url.Action("_getCrearParametroConfiguracion")"
                   data-url-editar="@Url.Action("_getEditarParametroConfiguracion")"
                   data-url-eliminar="@Url.Action("eliminarParametroConfiguracion")"
                   data-url-localization="@Url.Content("~/Scripts/dataTables/localization/"+Resources.ConfiguracionResource.DataTables+ ".json")"
                   role="grid" aria-describedby="dynamic-table_info">
                <thead>
                    <tr role="row">
                        <th tabindex="0" aria-controls="dynamic-table" data-name="EditarRegistro" rowspan="1" colspan="1" aria-label="Acciones"></th>
                        <th class="sorting" tabindex="0" aria-controls="dynamic-table" data-name="NombreParametro" rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(m => m.NombreParametro)">@Html.DisplayNameFor(m => m.NombreParametro)</th>
                        <th class="sorting" tabindex="0" aria-controls="dynamic-table" data-name="CodigoConfiguracion" rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(m => m.CodigoConfiguracion)">@Html.DisplayNameFor(m => m.CodigoConfiguracion)</th>
                        <th class="sorting" tabindex="0" aria-controls="dynamic-table" data-name="Descripcion" rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(m => m.Descripcion)">@Html.DisplayNameFor(m => m.Descripcion)</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@section scripts {
    @Scripts.Render("~/bundles/jqueryTable")
    @Scripts.Render("~/bundles/chosen")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/intranetSAI/Administrador/parametroConfiguracion")
    
}
@section Styles {
    @Styles.Render("~/Content/css/chosen")
}
