@model IntranetWeb.ViewModel.Administrador.Rol
<div class="row">

    <div class="form-group  col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
        @Html.LabelBoldFor(m => m.Nombre)
        @Html.TextBoxFor(m => m.Nombre, new { Class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "help-block" })
    </div>
    <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
        @Html.LabelBoldFor(m => m.IndicadorActivo)
        @Html.CheckBoxAceFor(m => m.IndicadorActivo, new { Class = "form-control" })
        @Html.ValidationMessageFor(model => model.IndicadorActivo, "", new { @class = "help-block" })
    </div>

</div>
<div class="row">
    <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @Html.LabelBoldFor(m => m.Descripcion)
        @Html.TextAreaFor(m => m.Descripcion,  new { Class = "form-control", @rows = "10" })
        @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "help-block" })
    </div>    
</div>
@if (Model.Id != 0)
{
    @Html.HiddenFor(x => x.Id)
}