@model IntranetWeb.ViewModel.Administrador.Cargo
@{
    Layout = null;
 }

<div class="row">
    <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
        @Html.LabelBoldFor(m => m.UnidadAdministrativaSeleccionada)
        @Html.DropDownListFor(m => m.UnidadAdministrativaSeleccionada, new SelectList(Model.UnidadAdministrativa, "Value", "Text"), HttpUtility.HtmlDecode(Resources.DescripcionResource.Seleccione +" " + Html.DisplayNameFor(m => m.UnidadAdministrativaSeleccionada)), new { @class = "select2 form-control" })
        @Html.ValidationMessageFor(model => model.UnidadAdministrativaSeleccionada, "", new { @class = "help-block" })
    </div>
    <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
        @Html.LabelBoldFor(m => m.Nombre)<br />
        @Html.TextBoxFor(m => m.Nombre, new { Class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "help-block" })
    </div>
</div>

<div class="row">
    <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @Html.LabelBoldFor(m => m.DescripcionCargo)<br />
        @Html.TextAreaFor(m => m.DescripcionCargo, new { Class = "form-control", @rows = "10" })
        @Html.ValidationMessageFor(model => model.DescripcionCargo, "", new { @class = "help-block" })
    </div>
</div>

<div class="row">
    <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @Html.LabelBoldFor(m => m.CargoPadreSeleccionado)
        @Html.DropDownListFor(m => m.CargoPadreSeleccionado, new SelectList(Model.CargoPadre, "Value", "Text"), HttpUtility.HtmlDecode(Resources.DescripcionResource.Seleccione +" " + Html.DisplayNameFor(m => m.CargoPadreSeleccionado)), new { @class = "select2 form-control" })
        @Html.ValidationMessageFor(model => model.CargoPadreSeleccionado, "", new { @class = "help-block" })
    </div>    
</div>

@if (Model.Id != 0) {
    @Html.HiddenFor(x=> x.Id)
}
