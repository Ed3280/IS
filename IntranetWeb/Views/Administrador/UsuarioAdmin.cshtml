@model IntranetWeb.ViewModel.Administrador.Usuario
@{
    ViewBag.Title = Resources.TituloPaginaResource.UsuarioAdmin;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header" data-etiqueta-procesando="@Resources.EtiquetaResource.Procesando"
                         data-etiqueta-cargando-roles="@Resources.EtiquetaResource.CargandoRoles"   
     ><h1>@ViewBag.Title</h1></div>

<div class="row">
    <div class="col-xs-12">
        <div class="table-header">
            @ViewBag.Title &nbsp;
            <div class="widget-toolbar">
                <a href="javascript:void(0);" data-rel="tooltip" data-placement="top" title="@Resources.EtiquetaResource.CrearRegistro" class="tooltip-info icono-crear-registro" data-action="create"> <i id="iCreateTablaPrincipal" class="ace-icon fa fa-plus white"> </i></a>
            </div>
        </div>
        <!-- div.table-responsive -->
        <!-- div.dataTables_borderWrap -->
        <div id="dynamic-table_wrapper" class="dataTables_wrapper form-inline no-footer">
            <table id="tablaPrincipalAdministracion" class="table table-striped table-bordered table-hover dataTable no-footer DTTT_selectable"
                   data-url="@Url.Action("consultarUsuariosAdmin")"
                   data-url-crear="@Url.Action("_getCrearUsuarioAdmin")"
                   data-url-consultar="@Url.Action("_getConsultarUsuarioAdmin")"
                   data-url-editar="@Url.Action("_getEditarUsuarioAdmin")"
                   data-url-localization="@Url.Content("~/Scripts/dataTables/localization/"+Resources.ConfiguracionResource.DataTables+ ".json")"
                   role="grid" aria-describedby="dynamic-table_info">
                <thead>
                    <tr role="row">
                        <th                 tabindex="0" aria-controls="dynamic-table" data-name="EditarRegistro"     rowspan="1" colspan="1" aria-label="Acciones"></th>
                        <th class="sorting" tabindex="0" aria-controls="dynamic-table" data-name="NombreUsuario"      rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(m => m.NombreUsuario)">@Html.DisplayNameFor(m => m.NombreUsuario)</th>
                        <th class="sorting" tabindex="0" aria-controls="dynamic-table" data-name="Documento"          rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(m => m.Documento)">@Html.DisplayNameFor(m => m.Documento)</th>
                        <th class="sorting" tabindex="0" aria-controls="dynamic-table" data-name="NombreApellido"     rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(m => m.NombreApellido)">@Html.DisplayNameFor(m => m.NombreApellido)</th>
                        <th class="sorting" tabindex="0" aria-controls="dynamic-table" data-name="Email"              rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(m => m.Email)">@Html.DisplayNameFor(m => m.Email)</th>
                        <th class="sorting" tabindex="0" aria-controls="dynamic-table" data-name="DescripcionEstatus" rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(m => m.IndicadorActivo)">@Html.DisplayNameFor(m => m.IndicadorActivo)</th>
                        <th class="sorting" tabindex="0" aria-controls="dynamic-table" data-name="DescripcionBloqueado" rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(m => m.IndicadorBloqueado)">@Html.DisplayNameFor(m => m.IndicadorBloqueado)</th>
                        <th class="sorting" tabindex="0" aria-controls="dynamic-table" data-name="FechaEstatus"       rowspan="1" colspan="1" aria-label="@Html.DisplayNameFor(m => m.FechaEstatus)">@Html.DisplayNameFor(m => m.FechaEstatus)</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@section scripts {
    @Scripts.Render("~/bundles/jqueryTable")
    @Scripts.Render("~/bundles/select2")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/duallistbox")
    @Scripts.Render("~/bundles/nestable")
    @Scripts.Render("~/bundles/fuelux/wizard")
    @Scripts.Render("~/bundles/intranetSAI/Administrador/usuarioAdmin")
    
}


@section Styles {
    @Styles.Render("~/Content/css/select2")
    @Styles.Render("~/Content/css/duallistbox")
    
}
